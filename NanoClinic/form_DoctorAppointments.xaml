                                <StackPanel Orientation="Horizontal">

                                    <Border x:Name="app_4" Cursor="Hand"   CornerRadius="10" Width="100" Height="100" Margin="60,20,0,0" Background="Transparent" BorderThickness="1" BorderBrush="#337ab7" PreviewMouseLeftButtonDown="app_4_PreviewMouseLeftButtonDown">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>

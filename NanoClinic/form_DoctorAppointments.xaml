                            <Border VerticalAlignment="Center" BorderThickness="1"  HorizontalAlignment="Center" BorderBrush="#337ab7" Margin="0,0" CornerRadius="20" Width="320" Height="190" Background="Transparent" >

                                <Grid HorizontalAlignment="Center">


                    </StackPanel>
                    <customcontrols:MenuButton Margin="60,0,0,0"  Icon="{StaticResource MyFilesFolder}" Text="Appintment Details"  GroupName="MenuButton" Cursor="Hand" />


                    <StackPanel HorizontalAlignment="Center" Height="300" Margin="0,-30,0,0"  Orientation="Horizontal">
                        
                        
                        <Border  Margin="0,0,0,0" BorderBrush="#c2c3c3" BorderThickness="1" CornerRadius="20" Width="400" Height="225" Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
